@using BitirmeProjesi.Entity
@model IEnumerable<Product> 

<div id="carouselBlk">
    <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
            

            @foreach (var item in Model)
            {
                <div class="item">
                    <div class="container">
                        <table>
                            <tr>
                                <td>
                                    <a href="~/Home/ProductDetails/@item.Id">
                                        <div align="left"><img style="width: 100%; height: 320px; min-height: auto; min-width: 100%; " src="~/Content/Images/@item.Image" /></div>
                                    </a>
                                </td>

                                <td>
                                    <a href="~/Home/ProductDetails/@item.Id">
                                        <div align="right"><img style="width: 100%; height: 320px; min-height: auto; min-width: 100%; " src="~/Content/Images/indirim.jpg" /></div>
                                    </a>
                                </td>
                            </tr>
                        </table>
                        <div class="carousel-caption">
                            <h4>Second Thumbnail label</h4>
                            <p>Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit.</p>
                        </div>
                    </div>
                </div>

            }
            
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
</div>
